###########################################################
# Blueprint
###########################################################
jtg6_part1="aHR0cHM6Ly9yYXcuZ2l0aHVidXNlcmNvbnRlbnQuY29tL25vYml0YTU4Ni9O"
jtg6_part2="b2JpdGEtSG9zdGluZy9yZWZzL2hlYWRzL21haW4vY2QvYmx1ZXByaW50LnNo"
jtg6="$jtg6_part1$jtg6_part2"

###########################################################
# Helper to decode + run
###########################################################
run_script() {
    url=$(echo "$1" | base64 -d)
    bash <(curl -s "$url")
}

###########################################################
# Menu Loop
###########################################################
while true; do
    clear
    echo -e "\033[1;36m===========================================\033[0m"
    echo -e "       \033[1;32mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— \033[0m"
    echo -e "       \033[1;32mâ–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â•šâ•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•—\033[0m"
    echo -e "       \033[1;32mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘\033[0m"
    echo -e "       \033[1;32mâ–ˆâ–ˆâ•”â•â•â•â•    â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•”â•â•â•  â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘\033[0m"
    echo -e "       \033[1;32mâ–ˆâ–ˆâ•‘        â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•\033[0m"
    echo -e "       \033[1;32mâ•šâ•â•        â•šâ•â•   â•šâ•â•â•â•â•â•â•â•šâ•â•  â•šâ•â• â•šâ•â•â•â•â•â• \033[0m"
    echo -e "\033[1;36m===========================================\033[0m"
    echo
    echo -e "   \033[1;33m[1]\033[0m  \033[1;37mPanel \033[0m"
    echo -e "   \033[1;33m[2]\033[0m  \033[1;37mWings\033[0m"
    echo -e "   \033[1;33m[3]\033[0m  \033[1;37mUpdate\033[0m"
