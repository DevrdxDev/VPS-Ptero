    echo -e "   \033[1;31m[0]\033[0m  \033[1;37mExit\033[0m"
    echo
    echo -e "\033[1;36m===========================================\033[0m"
    echo
    read -p "Enter your choice: " choice

    case $choice in
        1) run_script "$jtg1" ;;
        2) run_script "$jtg2" ;;
        3) run_script "$jtg3" ;;
        4) run_script "$jtg4" ;;
        5) run_script "$jtg5" ;;
        6) run_script "$jtg6" ;;
        0) echo "Exiting..." && exit 0 ;;
        *) echo "Invalid choice!" ;;
    esac

    echo
    read -p "Press Enter to return to menu..." dummy
done
