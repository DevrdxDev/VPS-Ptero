#!/bin/bash

set -euo pipefail

###########################################################
#              Pterodactyl & Jishnu Secure Menu           #
#        All scripts are Base64 encoded & protected       #
###########################################################

# -------------------------
# updating now files
# -------------------------

###########################################################
# Panel 
###########################################################
jtg1_part1="aHR0cHM6Ly9yYXcuZ2l0aHVidXNlcmNvbnRlbnQuY29tL0ppc2hudVRoZUd"
jtg1_part2="hbWVyL1Zwcy9yZWZzL2hlYWRzL21haW4vcHRlcm8lMjBvZmZjaWFsJTIwd2l0aCUyMG5naW54"
